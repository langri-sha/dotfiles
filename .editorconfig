# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.yml,gitconfig,gitconfig.local}]
indent_size = 2

[{*.t,*.t.err}]
indent_size = 2

[{Dockerfile,pre-up,post-up}]
indent_style = tab
