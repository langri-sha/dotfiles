# For local connections, assumes SSH is forwarded
Host default vagrant
  HostName 127.0.0.1
  Port 2222

# On private networks, assume your trying to authenticate as vagrant
Host default vagrant 192.168.?.?
  User vagrant
  UserKnownHostsFile /dev/null
  StrictHostKeyChecking no
  PasswordAuthentication no
  IdentityFile ~/.vagrant.d/insecure_private_key
  IdentitiesOnly yes
  LogLevel FATAL
